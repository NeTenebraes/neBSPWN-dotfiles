#
# wm independent hotkeys
#

# Captura toda la pantalla
# Pantalla completa → portapapeles + notificación (icono screenshot)
Print
    maim | xclip -selection clipboard -t image/png && \
    notify-send "Screenshot" "Pantalla completa copiada al portapapeles" \
        -i /usr/share/icons/Papirus-Dark/48x48/apps/accessories-screenshot.svg -t 1500

# Selección de área → portapapeles + notificación (icono screenshot)
shift + Print
    maim -s | xclip -selection clipboard -t image/png && \
    notify-send "Screenshot" "Área seleccionada copiada al portapapeles" \
        -i /usr/share/icons/Papirus-Dark/48x48/apps/accessories-screenshot.svg -t 1500

# Pantalla completa → archivo + miniatura real del screenshot
ctrl + Print
    bash -c ' \
        DIR="$HOME/Pictures/screenshots"; \
        mkdir -p "$DIR"; \
        FILE="$DIR/screenshot_$(date +\"%Y-%m-%d_%H-%M-%S\").png"; \
        maim \"$FILE\" && \
        notify-send \"Screenshot guardada\" \"$FILE\" -i \"$FILE\" -t 3000 \
    '


# terminal emulator
super + Return
    kitty
# program launcher
super + d
	rofi -show drun -show-icons

# make sxhkd reload its configuration files:
super + shift + r
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}


#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# alternate between the tiled and monocle layout
super + space
	bspc desktop -l next


#
# focus/swap
#

super + {_,shift + }{Left,Down,Up,Right}
       bspc node -{f,s} {west,south,north,east}


# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# move/resize
#

# Expandir
super + ctrl + {Left,Down,Up,Right}  
      ~/.config/bspwm/bspwm_resize expand {west,south,north,east} 50

# Contraer  
super + alt + {Left,Down,Up,Right}
      ~/.config/bspwm/bspwm_resize contract {west,south,north,east} 50


# move a floating window
super + ctrl + alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}a


